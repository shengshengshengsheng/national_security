<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.hyphenate.easeui.widget.EaseTitleBar
        app:titleBarTitle="工作台"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.hyphenate.easeui.widget.EaseTitleBar>
    <Button android:id="@+id/bt_working_oneKey"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:drawableLeft="@mipmap/callhelp"
        android:drawableRight="@mipmap/go_right"
        android:paddingLeft="5dp"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:drawablePadding="10dip"
        android:layout_marginBottom="2dp"
        android:text="一键增援"/>
    <Button android:id="@+id/bt_working_punchCard"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:textSize="20dp"
        android:drawableLeft="@mipmap/daka"
        android:drawableRight="@mipmap/go_right"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:drawablePadding="10dip"
        android:layout_marginBottom="2dp"
        android:text="出勤打卡"/>
    <Button android:id="@+id/bt_working_Case"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:textSize="20dp"
        android:drawableLeft="@mipmap/casecenter"
        android:drawableRight="@mipmap/go_right"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:drawablePadding="10dip"
        android:layout_marginBottom="2dp"
        android:text="任务中心"/>
</LinearLayout>